        <item name="android:padding">@dimen/margin_10dp</item>
    </style>
    <style name="TextCardVisitTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/margin_10dp</item>
    </style>
</resources>
