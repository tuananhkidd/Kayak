<?xml version="1.0" encoding="utf-8"?>
<com.beetech.kayak.custom.SquareLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgImageItemGallery"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/txtBackgroundItemGallery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#49161616"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/cbItemGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/imgImageItemGallery"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:checked="false" />
    </RelativeLayout>
</com.beetech.kayak.custom.SquareLinearLayout>